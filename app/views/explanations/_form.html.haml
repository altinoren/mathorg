= simple_form_for @explanation do |f|
  = f.input :title
  = f.input :description
  = f.input :topics, url: autocomplete_topic_name_topics_path, as: :autocomplete, |
    'data-delimiter' => ', ', input_html: { value: Topic.topics_array_to_topics_string(@explanation.topics), |
    class: "text optional form-control" }
  = f.input :body, input_html: { rows: long_entry_row_num }
  = f.button :submit

%button{type: 'button', class: "btn btn-default", onclick: "preview('explanation_body');"} Preview

#preview