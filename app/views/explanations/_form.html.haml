= form_for @explanation, url: explanations_path do |f|
    = f.label :title
    %br/
    = f.text_field :title
    %br/
    %br/
    = f.label :description
    %br/
    = f.text_field :description
    %br/
    %br/
    = f.label :topics
    %br/
    = f.text_field :topics, value: Topic.topics_array_to_topics_string(@explanation.topics)
    %br/
    %br/
    = f.label :body
    %br/
    = f.text_area :body
    %br/
    %br/
    = f.submit