= simple_form_for [@problem, @solution] do |f|
  = f.input :topics, url: autocomplete_topic_name_topics_path, as: :autocomplete, |
    'data-delimiter' => ', ', input_html: { value: Topic.topics_array_to_topics_string(@solution.topics), |
    class: "text optional form-control" }
  = f.input :body, input_html: { rows: long_entry_row_num }
  = f.input :hints_string, label: "Hints", as: :text, input_html: { rows: long_entry_row_num }
  = f.button :submit

