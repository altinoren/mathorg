= simple_form_for @topic do |f|
  = f.input :name
  = f.input :parents, url: autocomplete_topic_name_topics_path, as: :autocomplete, | 
    'data-delimiter' => ', ', input_html: { value: Topic.topics_array_to_topics_string(@topic.parents), |
    class: "text optional form-control" }
  = f.button :submit

