.row.list-group 
  - @problem_results.each do |pr|
    .list-group-item
      %strong
        = link_to pr.show_description, pr
      %br/
      %br/

      %strong Source:
      = pr.source
      %br/

      = render '/problems/sources', problem: pr
      = render 'topicables/topic_list', topicable: pr
      %br/
      %br/

      = raw(pr.body.bbcode_to_html.gsub("\n", "<br/>"))
      %br/
      %br/