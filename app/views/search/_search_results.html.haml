%br/
- if results.size == 0
  %em
    = "No results found"

- foo = 'search/topic_result'
.row.list-group 
  - results.each do |r|
    .list-group-item
      - case r.class.to_s
      - when "Problem"
        = render 'search/problem_result', problem: r
      - when "Explanation"
        = render 'search/explanation_result', explanation: r
      - when "Topic" 
        = render 'search/topic_result', topic: r