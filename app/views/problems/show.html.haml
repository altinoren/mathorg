:javascript
  function makeVisible(id)
  {
     document.getElementById(id).style.display = "inline";
  }

  var latest_hint_shown = [];
  function show_next_hint(solution_id)
  {
    if (typeof(latest_hint_shown[solution_id]) == 'undefined')
      latest_hint_shown[solution_id] = 0; 

    $("#hint_" + solution_id + "_" + latest_hint_shown[solution_id])[0].style.display = "inline";
    $("#hint_button" + solution_id).html('Show next hint');
    ++latest_hint_shown[solution_id];

    if (typeof($("#hint_" + solution_id + "_" + latest_hint_shown[solution_id])[0]) == 'undefined')
      $("#hint_button" + solution_id)[0].style.display = "none"; 
  }

%h2
  = @problem.description

%strong Source:
= @problem.source
%br/

%strong Author:
= @problem.author
%br/

- if user_signed_in?
  = link_to 'Edit', edit_problem_path(@problem)
  | 
  = link_to 'Destroy', problem_path(@problem), method: :delete, data: { confirm: 'Are you sure?' }
%br/
%br/

= raw(@problem.body.bbcode_to_html.gsub("\n", "<br/>"))

%h3 Solutions

.row.list-group 
  - @problem.solutions.each do |solution|
    = render partial: 'solution', object: solution

- if user_signed_in?
